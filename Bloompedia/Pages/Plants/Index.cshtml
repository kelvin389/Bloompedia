@page
@model Bloompedia.Pages.Plants.IndexModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Plant[0].Type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Plant) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.PlantID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.PlantID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.PlantID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
