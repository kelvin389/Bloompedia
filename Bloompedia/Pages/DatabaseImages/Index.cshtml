@page
@model Bloompedia.Pages.DatabaseImages.IndexModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Image[0].ImageName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image[0].ImageSrc)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Image) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ImageName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageSrc)
                <img src=@item.getImageUrl() />
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ImageID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ImageID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ImageID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
